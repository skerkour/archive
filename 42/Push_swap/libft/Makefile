ADT_DIR	= ft_adt
ADT_SRC	=	$(ADT_DIR)/ft_dlstnew.c \
			$(ADT_DIR)/ft_dlst_del.c \
			$(ADT_DIR)/ft_dlstlen.c \
			$(ADT_DIR)/ft_lstadd.c
ADT_OBJ	=	$(ADT_SRC:.c=.o)

RL_DIR	= ft_readline
RL_SRC	=	$(RL_DIR)/ft_readline.c \
			$(RL_DIR)/rl_ctx.c \
			$(RL_DIR)/rl_delete.c \
			$(RL_DIR)/rl_dlist_to_arr.c \
			$(RL_DIR)/rl_dlst.c \
			$(RL_DIR)/rl_output.c \
			$(RL_DIR)/rl_resize_handler.c \
			$(RL_DIR)/rl_arrows.c
RL_OBJ	 = $(RL_SRC:.c=.o)

CC		= gcc
CFLAGS	= -Wall -Wextra -Werror -Ofast -I .

# **************************************************************************** #
.PHONY: clean fclean re $(NAME)

$(NAME): $(OBJ) $(ADT_OBJ) $(RL_OBJ)
	make -C $(RL_DIR)
	ar rc $(NAME) $(OBJ) $(ADT_OBJ) $(RL_OBJ)

all: $(NAME)

clean:
	rm -rf $(OBJ) $(ADT_OBJ)
	make -C $(RL_DIR) clean

fclean: clean
	rm -rf $(NAME)
	make -C $(RL_DIR) fclean

re: fclean $(NAME)
