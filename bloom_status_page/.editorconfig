# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true


# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# 4 space indentation
[{*.rs,*.toml,*.sane,*.json, *.sql, *.css, *.scss, *.sass}]
indent_style = space
indent_size = 4

# 2 space indentation
[{*.html}]
indent_style = space
indent_size = 2
